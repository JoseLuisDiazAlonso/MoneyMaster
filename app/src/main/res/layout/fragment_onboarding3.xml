<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_onboarding3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_onboarding">

        <!--Imágen ilustrativa-->

        <ImageView
            android:id="@+id/imageOnboarding3"
            android:layout_width="238dp"
            android:layout_height="182dp"
            android:layout_marginTop="124dp"
            android:src="@drawable/onboarding3_picture"
            android:background="@drawable/bg_rounded_shadow"
            android:elevation="8dp"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Título-->

        <TextView
            android:id="@+id/tvTitle3"
            android:layout_width="307dp"
            android:layout_height="38dp"
            android:layout_marginTop="76dp"
            android:text="Privacidad garantizada"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageOnboarding3" />

        <!--Texto Descriptivo-->

        <TextView
            android:id="@+id/tvDescription3"
            android:layout_width="332dp"
            android:layout_height="48dp"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Todos tus datos se almacenan únicamente en tu dispositivo, sin conexión a internet"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>